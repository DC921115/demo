<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        tools:context="com.example.ding.application2.MainActivity">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/colorDark"
                    android:layout_alignParentTop="true"
                    android:layout_height="40dp">
        <TextView android:layout_width="match_parent"
                  android:gravity="center"
                  android:id="@+id/text_main_title"
                  android:text="@string/app_home"
                  android:textColor="@color/colorWhite"
                  android:textSize="18sp"
                  android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
        <LinearLayout android:layout_width="270dp"
                      android:orientation="vertical"
                      android:id="@+id/layout_login"
                      android:layout_height="160dp">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_height="48dp">

                <TextView android:layout_width="80dp"
                          android:text="用户名："
                          android:textSize="16sp"
                          android:gravity="center"
                          android:layout_height="48dp">
                </TextView>
                <EditText android:layout_height="48dp"
                          android:inputType="text"
                          android:textSize="16sp"
                          android:id="@+id/edit_login_username"
                          android:layout_marginLeft="20dp"
                          android:hint="请输入用户名"
                          android:maxLength="20"
                          android:layout_width="160dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_height="48dp">

                <TextView android:layout_width="80dp"
                          android:text="密码："
                          android:textSize="16sp"
                          android:gravity="center"
                          android:layout_height="48dp">
                </TextView>
                <EditText android:layout_height="48dp"
                          android:inputType="textPassword"
                          android:textSize="16sp"
                          android:maxLength="20"
                          android:id="@+id/edit_login_password"
                          android:hint="请输入密码"
                          android:layout_marginLeft="20dp"
                          android:layout_width="160dp"/>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_height="48dp">
                <Button android:layout_width="120dp"
                        android:text="注册"
                        android:id="@+id/btn_signin"
                        android:layout_height="40dp"/>
                <Button android:layout_width="120dp"
                        android:text="登陆"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/btn_login"
                        android:layout_height="40dp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout android:layout_width="270dp"
                      android:orientation="vertical"
                      android:id="@+id/layout_sign"
                      android:visibility="gone"
                      android:layout_height="160dp">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_height="48dp">

                <TextView android:layout_width="80dp"
                          android:text="用户名："
                          android:textSize="16sp"
                          android:gravity="center"
                          android:layout_height="48dp">
                </TextView>
                <EditText android:layout_height="48dp"
                          android:inputType="text"
                          android:textSize="16sp"
                          android:layout_marginLeft="20dp"
                          android:maxLength="20"
                          android:id="@+id/edit_sign_username"
                          android:hint="请输入用户名"
                          android:layout_width="160dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center_vertical"
                          android:layout_height="48dp">

                <TextView android:layout_width="80dp"
                          android:text="密码："
                          android:textSize="16sp"
                          android:gravity="center"
                          android:layout_height="48dp">
                </TextView>
                <EditText android:layout_height="48dp"
                          android:inputType="textPassword"
                          android:textSize="16sp"
                          android:id="@+id/edit_sign_password"
                          android:hint="请输入密码"
                          android:maxLength="20"
                          android:layout_marginLeft="20dp"
                          android:layout_width="160dp"/>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_height="48dp">
                <Button android:layout_width="120dp"
                        android:text="提交"
                        android:id="@+id/btn_submit"
                        android:layout_height="40dp"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
